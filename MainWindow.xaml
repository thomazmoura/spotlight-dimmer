<Window x:Class="SpotlightDimmer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wpf="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:local="clr-namespace:SpotlightDimmer"
        Title="Spotlight Dimmer" 
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        SizeToContent="WidthAndHeight"
        Name="MainDimmerWindow">
    <Grid Name="MainWindowGrid">
        <StackPanel Orientation="Horizontal" Margin="10">
            <StackPanel Orientation="Vertical" Margin="10">
                <Label Content="Select color:" VerticalAlignment="Center" Margin="0 0 10 0"/>
                <wpf:ColorCanvas x:Name="colorPicker"
                    SelectedColor="{Binding SelectedColor, Mode=TwoWay}"
                    UsingAlphaChannel="True"/>
                <Button Name="saveSettingsButton" Click="saveSettingsButton_Click" Content="Save setttings"></Button>
            </StackPanel>
            <StackPanel Orientation="Vertical" Margin="10">
                <Label Content="Debug Info:" Visibility="{Binding DebugInfoVisibility}" />
                <TextBox IsReadOnly="True" IsEnabled="False" Text="{Binding DebugInfo}" Visibility="{Binding DebugInfoVisibility}"
                         Width="300" Height="300"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>