<Window x:Class="SpotlightDimmer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:SpotlightDimmer"
        Title="Spotlight Dimmer" 
        WindowStyle="None"
        Name="MainDimmerWindow">
    <Grid Name="MainWindowGrid">
        <StackPanel Margin="10">
            <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                <Label Content="Select color:" VerticalAlignment="Center" Margin="0 0 10 0"/>
                <ColorPicker x:Name="colorPicker" SelectedColor="#FF000000" ShowAlphaChannel="True"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                <CheckBox x:Name="checkBox" Content="Enable" Margin="0 0 10 0"/>
                <Label Content="Selected color (ARGB):" VerticalAlignment="Center" Margin="0 0 10 0"/>
                <TextBox x:Name="textBox" IsReadOnly="True" Margin="0" Width="150"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>