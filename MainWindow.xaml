<Window x:Class="SpotlightDimmer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wpf="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:local="clr-namespace:SpotlightDimmer"
        Title="Spotlight Dimmer" 
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        Name="MainDimmerWindow">
    <Grid Name="MainWindowGrid">
        <StackPanel Margin="10">
            <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                <Label Content="Select color:" VerticalAlignment="Center" Margin="0 0 10 0"/>
                <wpf:ColorPicker x:Name="colorPicker" SelectedColor="{Binding _dimmerSettings.SelectedColor}" />
            </StackPanel>
            <StackPanel Margin="10">
                <CheckBox Content="Show Debug Info" IsChecked="{Binding IsDebugInfoVisible, Mode=TwoWay}" />
                <Label Content="Debug Info:" Visibility="{Binding DebugInfoVisibility}" />
                <TextBox IsReadOnly="True" Text="{Binding DebugInfo}" Visibility="{Binding DebugInfoVisibility}" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>