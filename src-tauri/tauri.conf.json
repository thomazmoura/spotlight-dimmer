{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "spotlight-dimmer",
  "version": "0.1.0",
  "identifier": "com.spotlightdimmer.app",
  "build": {
    "frontendDist": "../dist",
    "beforeDevCommand": "",
    "beforeBuildCommand": ""
  },
  "app": {
    "windows": [
      {
        "title": "Spotlight Dimmer",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "skipTaskbar": true,
        "minimizable": false,
        "visible": false
      }
    ],
    "security": {
      "csp": null
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "Spotlight Dimmer Team",
    "copyright": "Copyright Â© 2024 Spotlight Dimmer Team. All rights reserved.",
    "category": "Productivity",
    "shortDescription": "Dims inactive displays to highlight the active one",
    "longDescription": "Spotlight Dimmer is a cross-platform application that helps users with multiple monitors focus by dimming all displays except the one with the currently focused window. Features real-time focus monitoring, click-through overlays, and system tray integration.",
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "wix": {
        "language": ["en-US"],
        "template": "main.wxs"
      }
    }
  }
}
